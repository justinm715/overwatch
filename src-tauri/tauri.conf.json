{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Overwatch",
  "version": "0.1.0",
  "identifier": "com.jm.overwatch",
  "build": {
    "frontendDist": "../src",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Overwatch",
        "width": 800,
        "height": 600,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
